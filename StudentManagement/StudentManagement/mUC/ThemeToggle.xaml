<UserControl x:Class="StudentManagement.mUC.ThemeToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.mUC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <materialDesign:PopupBox  StaysOpen="False"
                              PlacementMode="BottomAndAlignRightEdges">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="20">
            <materialDesign:PackIcon Kind="WeatherSunny" 
                                                 Margin="0 0 10 0"/>
            <TextBlock Text="Day"
                                   Margin="0 0 10 0"/>
            <ToggleButton x:Name="DarkModeToggleButton" 
                                      Click="MenuDarkModeButton_Click"
                          IsChecked="True"/>
            <TextBlock Text="Night"
                                   Margin="10 0 0 0"/>
            <materialDesign:PackIcon Kind="MoonWaxingCrescent" 
                                                 Margin="10 0 0 0"/>
        </StackPanel>
    </materialDesign:PopupBox>
</UserControl>
